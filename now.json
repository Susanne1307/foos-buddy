{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@now/static-build",
      "config": { "distDir": "build" }
    },
    { "src": "server.js", "use": "@now/node-server" }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/client/static/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/favicon.ico",
      "dest": "/client/favicon.ico"
    },
    {
      "src": "/storybook/(.*)",
      "dest": "/client/storybook/$1"
    },
    {
      "src": "/manifest.json",
      "dest": "/client/manifest.json"
    },
    {
      "src": "/(.*)",
      "dest": "/client/index.html"
    }
  ],
  "env": {
    "MONGO_URL": "@FoosBuddy"
  }
}
